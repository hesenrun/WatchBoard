<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="match_parent"
    android:background="?attr/background_color">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="?attr/text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2021-12-31" />

    <ImageView
        android:id="@+id/iv_weather_icon_day"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_time"
        app:layout_constraintStart_toStartOf="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        app:tint="?attr/weather_color" />


    <TextView
        android:id="@+id/tv_temp_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="?attr/text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_weather_icon_day"
        app:layout_constraintStart_toStartOf="@+id/iv_weather_icon_day"
        app:layout_constraintTop_toBottomOf="@+id/iv_weather_icon_day"
        tools:text="-99°C" />

    <ImageView
        android:id="@+id/iv_weather_icon_night"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_temp_day"
        app:layout_constraintStart_toStartOf="@+id/tv_temp_day"
        app:layout_constraintTop_toBottomOf="@+id/tv_temp_day"
        app:tint="?attr/weather_color" />


    <TextView
        android:id="@+id/tv_temp_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="?attr/text_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_weather_icon_night"
        app:layout_constraintStart_toStartOf="@+id/iv_weather_icon_night"
        app:layout_constraintTop_toBottomOf="@+id/iv_weather_icon_night"
        tools:text="-99°C" />


</androidx.constraintlayout.widget.ConstraintLayout>